<% obj.each do |a| %>
  <div class="container">
    <div class="row center">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="post-preview  well well-lg">
          <h4 class="post-title"><%= link_to a.title, article_path(a) %></h4>
          <h5 class="post-subtitle"><%= a.description %></h5><br>
          <div class="article-meta-details">
            <small>Created by: <%= a.user.username if a.user %>,
                   <%= time_ago_in_words(a.created_at) %> ago,
                   last updated: <%= time_ago_in_words(a.updated_at) %> ago
            </small>
          </div>
          <%= link_to 'Show', article_path(a), class: "btn btn-primary btn-xs", id: "color-change" %>
          <%= link_to 'Edit', edit_article_path(a), class: "btn btn-primary btn-xs", id: "color-change" %>
          <%= link_to 'Delete', a, method: :delete, data: { confirm: "Are You Sure!!!" }, class: "btn btn-danger btn-xs", id: "color-change" %>
        </div>
      </div>
    </div>
  </div>
<% end %>